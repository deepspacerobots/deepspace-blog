---
layout: base.liquid
pagination:
  data: collections
  size: 1000
  alias: tag
permalink: /tags/{{ tag }}/
---
<h1>Tagged! “{{ tag }}”</h1>

<ol>
{% assign taglist = collections[ tag ] %}
{% for entry in taglist | reverse %}
  <li><a href="{{ post.url | url }}">{{ post.data.title }}</a></li>
{% endfor %}
</ol>